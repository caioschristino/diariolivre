<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/recycle_horizontal_margin"
    android:layout_marginTop="@dimen/recycle_vertical_margin"
    android:background="@drawable/recycle_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txTitle"
            style="@style/recycleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txSecretariat"
                    style="@style/recycleSecretariat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txContent"
                    style="@style/recycleContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txDate"
                    style="@style/recycleDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="3dp">

            <ImageView
                android:id="@+id/iVLike"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:src="@mipmap/like_out" />

            <ImageView
                android:id="@+id/iVShare"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:src="@mipmap/share"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>